<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b5abc7bbdc.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <section class="navbar-section">
        <div class="container-fluid overflow-hidden">
            <div class="row vh-100 overflow-auto">
                <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0  d-flex sticky-top bg-dark">
                    <div
                      class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-5 pt-2 text-white">
                      <a href="/admin" class="d-flex align-items-center  pb-sm-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5">A<span class="d-none d-sm-inline">dmin</span></span>
                      </a>
                      <ul
                        class="nav flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start "
                        id="menu">
                        <li class="nav-item">
                          <a href="/addpatient" class="nav-link px-sm-0 px-2 ">
                            <i class="fa-solid fa-user-plus text-white"></i><span class="ms-1 d-none d-sm-inline text-white">AddPatient </span>
                          </a>
                        </li>
                        <li>
                          <a href="/dashboard"  class="nav-link px-sm-0 px-2">
                            <i class="fa-sharp fa-solid fa-table-columns text-white"></i><span
                              class="ms-1 d-none d-sm-inline text-white">Dashboard</span> </a>
                        </li>
                        
                      </ul>
                      <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1 ">
                        <a href="/logout" class="nav-link p-2 btn btn btn-danger  ">
                          <i class="fa-solid fa-right-from-bracket text-white"></i><span class="ms-1 d-none d-sm-inline ">Logout</span>
                        </a>
                      </div>
                    </div>
                  </div>
                  <section class="addpatient col-sm d-flex flex-column h-sm-100 " id="addpatient" >
                    <div class="text-center m-5">
                        <h1 class="h3 mb-3 ">Hospital Management System</h1>
                        <p > welcome to admin section </p>
                    </div>
                    <!-- table -->
                     <main class="dashboard col-sm d-flex flex-column h-sm-100 " id="dashboard">
                        <table class="table table-hover text-center">
                            <thead>
                              <tr>
                                <th scope="col">Patient_id</th>
                                <th scope="col">patient_name</th>
                                <th scope="col">patient_age</th>
                                <th scope="col">patient_moblie</th>
                                <th scope="col">patient_address</th>
                                <th scope="col">patient_disease</th>
                                <th scope="col">edit</th>
                                <th scope="col">discharge</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% data.forEach((get)=>{ %>
                                <tr class="m-2">
                                    <td><%= get.patient_id %></td>
                                    <td><%= get.patient_name %></td>
                                    <td><%= get.patient_age %></td>
                                    <td><%= get.patient_moblie %></td>
                                    <td><%= get.patient_address %></td>
                                    <td><%= get.patient_disease %></td>
                                    <td>
                                        <a href="/update/<%= get.patient_id %>" class="px-lg-4 p-1 btn btn-info">
                                            <i class="fa-solid fa-user-pen"></i><span class="ms-1 d-none d-sm-inline">Edit</span>
                                        </a>
                                    </td>
                                    <td>
                                       <form action="/delete/<%= get.patient_id %>?_method=DELETE " method="get">
                                        <button class="btn btn-danger px-lg-3 p-1 btn-sm" id="delete-btn">
                                            <i class="fa-solid fa-user-minus"></i> Delete
                                        </button>
                                       </form>
                                    </td>

                                </tr>

                             <% }) %>
                            </tbody>
                          </table>
                     </main>
                   
                  </section>

            </div>

        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>